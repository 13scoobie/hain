{
  "type": "object",
  "properties": {
    "shortcut": {
      "type": "string",
      "title": "Open-Close Toggle Shortcut",
      "description": "Please see <a href='http://electron.atom.io/docs/api/accelerator/'>available keys</a>",
      "default": "alt+space",
      "minLength": 1,
      "errorMessages": "You must provide toggle shortcut (e.g. 'alt+space')"
    },
    "clearQuery": {
      "type": "boolean",
      "title": "Clear query after window has closed",
      "default": true
    },
    "customQueryShortcuts": {
      "type": "array",
      "title": "Custom Query Shortcuts",
      "description": "You can set your own shortcuts with a custom query",
      "items": {
        "type": "object",
        "properties": {
          "shortcut": {
            "type": "string",
            "title": "Shortcut",
            "minLength": 1,
            "errorMessages": "You must provide the shortcut (e.g. 'alt+/')"
          },
          "query": {
            "type": "string",
            "title": "Query",
            "minLength": 1,
            "errorMessages": "You must provide the query (e.g. '/g ')"
          }
        }
      }
    },
    "proxy": {
      "type": "object",
      "title": "Global Proxy Settings",
      "properties": {
        "host": {
          "type": "string"
        },
        "port": {
          "type": "integer",
          "default": 80
        },
        "useProxy": {
          "type": "boolean",
          "title": "Use Proxy"
        }
      }
    }
  }
}
